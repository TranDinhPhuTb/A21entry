<%= render "common/menu" %>
<%= link_to "Create new team", new_team_path %>
<table>
<% @teams.each do |team| %>
	<tr>
		<td><%= team.name %></td>
		<td><%= link_to "Edit", edit_team_path(team.id) %></td>
		<td><%= link_to "Delete", team_path(team.id), method: :delete, data: { confirm: "Are you sure you want to delete this team?" } %></td>
	</tr>
<% end %>
</table>